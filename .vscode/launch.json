	"version": "0.2.0",
	"configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "${workspaceFolder}/dist/test/linter.spec.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "run program",
      "program": "${workspaceFolder}/dist/src/index.js",
      "args": [
        "lint",
        "${workspaceFolder}/test/mssql/select_with_join.sql",
        "--edition=parallel-data-warehouse",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}"
    }
	]
}
